
<%- include('../partials/header') %>

<div class="table-container">
<table class="list">
    <thead>
      <tr>
        <th>Name:</th>
        <th>Role:</th>
        <%- (user.admin) ? "<th></th>" : "" %>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(function(u) { %>
        <tr>
          <td><a href="users/<%= u._id %>"><%= u.name %></td>
          <br>
          <td><%= u.role %></td>
          <% if (user.admin) { %>
            <br/>
            <th><a href="/users/<%=u._id%>/edit">EDIT</a></th>
          <% } %>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <% if (user.admin) { %>
      <br>
    <a href="/users/new">Add New Provider</a>
  <% } %>


<%- include('../partials/footer') %>
